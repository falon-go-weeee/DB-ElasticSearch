[
    {
        "database": "grocery",
        "index": "grocery_index",
        "setting": {
            "analysis": {
                "analyzer": {
                    "address_analyzer": {
                        "type": "pattern",
                        "lowercase": false,
                        "filter": [ "address_stop_words_filter" ]
                    }
                },
                "filter": {
                    "address_stop_words_filter": {
                      "type": "stop",
                      "ignore_case": true,
                      "stopwords": ["INC", "ST", "LLC", "AVENUE", "STREET", "BLVD"]
                    }
                },
                "tokenizer": {
                    "ngram_tokenizer": {
                        "token_chars": [
                            "letter",
                            "digit",
                            "punctuation",
                            "symbol"
                        ],
                        "min_gram": "3",
                        "type": "ngram",
                        "max_gram": "15"
                    }
                }
            }
        },
        "nodes": {
            "table": "store_addresses",
            "columns": [
                "id",
                "STREET_ADDRESS",
                "CITY",
                "STATE",
                "ZIP_CODE"
            ],
            "children": [
                {
                    "table": "grocery_stores",
                    "columns": [
                        "id",
                        "BUSINESS_NAME",
                        "DBA_NAME",
                        "open_timing",
                        "closing_timing",
                        "contact_no",
                        "payment_option",
                        "delivery_option",
                        "rating"
                    ],
                    "relationship": {
                        "variant": "object",
                        "type": "one_to_one"
                    }
                }
            ]
        }
    }
]